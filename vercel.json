{
  "version": 2,
  "builds": [
    {
      "src": "src/vercel-handler.ts",
      "use": "@vercel/node",
      "config": { "includeFiles": ["prisma/**", "prisma.config.ts"] }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/vercel-handler.ts",
      "methods": ["GET", "POST", "PUT", "PATCH", "DELETE"]
    }
  ]
}
