{
  "version": 2,
  "builds": [
    {
      "src": "dist/vercel-handler.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["prisma/**", "public/**"] }
    }
  ],
  "routes": [
    { "src": "/favicon.(ico|png)", "dest": "/public/favicon.ico" },
    { "src": "/(.*)", "dest": "dist/vercel-handler.js" }
  ]
}
